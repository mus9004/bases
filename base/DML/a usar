select A.NOMBRE || ' ' || B.APELLIDO AS NOMBRE_COMPLETO
from TBL_USUARIO A, TBL_PERSONA B
WHERE A.CODIGO_USUARIO = B.CODIGO_PERSONA(+) AND
UPPER(A.NOMBRE || ' ' || B.APELLIDO) LIKE UPPER('%CES%');

SELECT * FROM(
  		SELECT A.*, ROWNUM RW
  		FROM (
           SELECT CODIGO_FOTO, URL_FOTO
            FROM "TBL_FOTOS") A
            WHERE UPPER(URL_FOTO) LIKE UPPER('%a%')
        )
        WHERE RW BETWEEN 41 AND 50;
select A.CODIGO_IDIOMA, A.CODIGO_GENERO, A.ALIAS, A.NOMBRE, B.APELLIDO, TO_CHAR(B.FECHA_NACIMIENTO, 'DD/MM/YYYY') as FECHA_NACIMIENTO, C.URL_FOTO
from TBL_USUARIO A, TBL_PERSONA B, TBL_FOTOS C
WHERE A.CODIGO_USUARIO = B.CODIGO_PERSONA(+)
AND A.CODIGO_FOTO = C.CODIGO_FOTO(+)
and A.CODIGO_USUARIO=1;
commit;
SELECT *
											FROM TBL_TABLERO
											WHERE CODIGO_USUARIO = 1;
SELECT * FROM(
  		SELECT A.*, ROWNUM RW
  		FROM (
           SELECT NOMBRE_CATEGORIA, CODIGO_CATEGORIA
            FROM "TBL_CATEGORIAS") A
        )
        WHERE RW BETWEEN 41 AND 50;
WITH SEGUIDORES AS (SELECT CODIGO_USUARIO, COUNT(*) AS NUM_SEGUIDORES
FROM TBL_SEGUIDORES_X_USUARIO
GROUP BY CODIGO_USUARIO)    
SELECT * FROM(
SELECT A.*, ROWNUM RW
FROM (
   select A.CODIGO_IDIOMA, A.CODIGO_GENERO, A.ALIAS, A.NOMBRE, B.APELLIDO,
   TO_CHAR(B.FECHA_NACIMIENTO, 'DD/MM/YYYY') as FECHA_NACIMIENTO, C.URL_FOTO, NVL(E.NUM_SEGUIDORES,0) AS NUM_SEGUIDORES
from TBL_USUARIO A, TBL_PERSONA B, TBL_FOTOS C, SEGUIDORES E
WHERE A.CODIGO_USUARIO = B.CODIGO_PERSONA(+)
AND A.CODIGO_FOTO = C.CODIGO_FOTO(+) AND
A.CODIGO_USUARIO = E.CODIGO_USUARIO(+) AND
UPPER(A.NOMBRE || ' ' || B.APELLIDO) LIKE UPPER('%C%')) A
)
WHERE RW BETWEEN 1 AND 20;

SELECT CODIGO_USUARIO, COUNT(*)
FROM TBL_SEGUIDORES_X_USUARIO
GROUP BY CODIGO_USUARIO;


SELECT * FROM(
SELECT A.*, ROWNUM RW
FROM (
   select A.CODIGO_IDIOMA, A.CODIGO_GENERO, A.ALIAS, A.NOMBRE, B.APELLIDO,
   TO_CHAR(B.FECHA_NACIMIENTO, 'DD/MM/YYYY') as FECHA_NACIMIENTO, C.URL_FOTO, NVL(E.NUM_SEGUIDORES,0) AS NUM_SEGUIDORES
from TBL_USUARIO A, TBL_PERSONA B, TBL_FOTOS C, (SELECT CODIGO_USUARIO, COUNT(*) AS NUM_SEGUIDORES
FROM TBL_SEGUIDORES_X_USUARIO
GROUP BY CODIGO_USUARIO) E
WHERE A.CODIGO_USUARIO = B.CODIGO_PERSONA(+)
AND A.CODIGO_FOTO = C.CODIGO_FOTO(+) AND
A.CODIGO_USUARIO = E.CODIGO_USUARIO(+) AND
UPPER(A.NOMBRE || ' ' || B.APELLIDO) LIKE UPPER('%C%')) A
)
WHERE RW BETWEEN 1 AND 20;
